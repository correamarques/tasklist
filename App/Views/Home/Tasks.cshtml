<br /><br />

<div class="container">
  <div class="row">
    <form>
      <div class="col-md-5">
        <div class="form-group">
          <label>Title</label>
          <input type="text" class="form-control" name="Title" placeholder="Title" required="required">
        </div>
      </div>
      <div class="col-md-5">
        <div class="form-group">
          <label>Description</label>
          <input type="text" class="form-control" name="Description" placeholder="Description for the task">
        </div>
      </div>
      <div class="col-md-2">
        <button id="save" type="button" class="btn btn-success" style="margin-top: 26px;">Save</button>
      </div>
    </form>
  </div>
</div>

<hr />

<h2>Tasks</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody id="waiting"></tbody>
</table>

<button type="button" id="tasks" class="btn btn-xs btn-primary">show completd tasks</button>

<table id="completed-tasks" class="table table-striped" style="display: none">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody id="completed"></tbody>
</table>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/app")

